@page "{id}"
@model RazorPagesGeneral.Pages.Employess.DeleteModel
@{
    ViewData["Title"] = "Delete";
    
    ViewData["ShowButtons"] = false;
}
<h1 class="text-center">Delete Confirmation</h1>
<!--Вызов частичной представлении _DisplayEmployeePartial-->
<div class="alert alert-danger">
    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 offset-sm-0 offest-md-3 offset-xl-4">
            <partial name="_DisplayEmployeePartial" model="Model.Employee" view-data="ViewData" />
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 offset-sm-0 offest-md-3 offset-xl-4">
            <div class="text-center text-secondary">
                <h4>Employee ID: <span class="text-primary">@Model.Employee.Id</span></h4><hr />
                <h4>Employee Email: <span class="text-primary">@Model.Employee.Email</span></h4><hr />
                <h4>Depratment: <span class="text-primary">@Model.Employee.Departmentt</span></h4><hr />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <h5>Are you shure want to delete employee - <span class="text-danger">@Model.Employee.Name?</span></h5>
            <form method="post">
                <button type="submit" class="btn btn-danger">Yes</button>
                <a class="btn btn-success" asp-page="/Employess/Employess">No</a>
            </form>
        </div>
    </div>
</div>