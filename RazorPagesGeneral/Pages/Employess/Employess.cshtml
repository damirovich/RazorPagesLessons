@page
@model RazorPagesGeneral.Pages.Employess.EmployessModel
@{
    ViewData["Title"] = "Employees";
}
@if (TempData["SeccessMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["SeccessMessage"]
    </div>
}
<h1>Employees</h1>
<div class="row">
    @foreach (var item in Model.Employess)
    {
        //Формируем путь к фотографиям   
        var photoPath = $"/images/{item.PhotoPath ?? "noimage.png"}";
        //Колличество колонок
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card-deck">
                <div class="card m-3 cardBoxShadow">
                    <div class="card-header text-center cardHeaderStyle">
                        <h3>@item.Name</h3>
                    </div>

                    <div class="text-center cardBodyStyle">
                        <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
                    </div>

                    <div class="card-footer text-center">
                        <a asp-page="/Employess/Details" asp-route-ID="@item.Id" class="btn btn-success m-1 buttonShadow">View</a>
                        <a asp-page="/Employess/Edit" asp-route-ID="@item.Id" class="btn btn-primary m-1 buttonShadow">Edit</a>
                        <a href="#" class="btn btn-danger m-1 buttonShadow">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
