@page "{id}"
@model RazorPagesGeneral.Pages.Employess.DetailsModel
@{
    ViewData["Title"] = "Employee Details";
    var photoPath = $"/images/{Model.Employee.PhotoPath ?? "noimage.png"}";
}
<!--Вывести департамент и его колличество сотрудников только принадлежащий этому сотруднику-->
<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <!--Вызов метода асинхронно-->
        <!--Два способа есть-->
        @*@await Component.InvokeAsync("HeadCount", new { department = Model.Employee.Departmentt })*@
        <vc:head-count department="@Model.Employee.Departmentt"></vc:head-count>
    </div>
</div>

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <div class="card cardBoxShadow">

            <div class="card-header cardHeaderStyle text-center">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body cardBoxShadow text-center">
                <div class="row">
                    <div class="col col-lg-9">
                        <h4 class="cardTextLeftFloating">Employee ID: @Model.Employee.Id</h4><hr />
                        <h4 class="cardTextLeftFloating">Email: @Model.Employee.Email</h4><hr />
                        <h4 class="cardTextLeftFloating">Department: <span class="text-danger font-weight-bold">@Model.Employee.Departmentt</span></h4><hr />
                    </div>
                    <div class="col col-lg-3">
                        <div style="border-right: 1px solid rgba(0,0,0,.1);">
                            <img class="card-img-top imageThumbnail border border-primary" style="background-color: #dle7ff;" src="@photoPath" asp-append-version="true" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card-footer text-center" style="background-color: rgba(0,0,0,0.25);">
                            <a asp-page="Employess" class="btn btn-success buttonShadow">Back</a>
                            <a href="#" class="btn btn-primary buttonShadow">Edit</a>
                            <a href="#" class="btn btn-danger buttonShadow">Delete</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
